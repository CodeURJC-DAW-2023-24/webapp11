                        <div class="actividad d-flex flex-row align-items-center" name="tag">
                            <div class="etiquetas-container info etiqueta-admin-container">
                                <span class="etiqueta-evento etiqueta-admin" style="background-color:{{color}}" name="tag-name">{{category}}</span>
